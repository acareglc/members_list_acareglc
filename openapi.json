{
  "openapi": "3.1.0",
  "info": {
    "title": "Memberslist API",
    "version": "1.0.0",
    "description": "구글 스프레드시트를 기반으로 한 회원/주문/메모/후원수당 관리 API"
  },
  "servers": [
    {
      "url": "https://memberslist.onrender.com"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "홈 (Health Check)",
        "description": "서버 정상 실행 여부 확인",
        "operationId": "getHealthCheck",
        "responses": {
          "200": {
            "description": "Flask 서버 실행 메시지"
          }
        }
      }
    },
    "/debug_sheets": {
      "get": {
        "summary": "구글 시트 디버깅",
        "description": "현재 연결된 Google Sheets 목록과 특정 시트의 헤더 확인",
        "operationId": "getDebugSheets",
        "parameters": [
          {
            "in": "query",
            "name": "sheet",
            "schema": { "type": "string" },
            "description": "조회할 시트명 (예: DB, 제품주문, 상담일지)"
          }
        ],
        "responses": {
          "200": { "description": "시트 목록 또는 헤더 반환" }
        }
      }
    },
    "/member": {
      "post": {
        "summary": "회원 관련 API",
        "description": "회원 intent 기반 단일 라우트",
        "operationId": "postMember",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": { "type": "string" }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "회원 관련 처리 성공" },
          "400": { "description": "요청 오류" }
        }
      }
    },
    "/memo": {
      "post": {
        "summary": "메모 관련 API",
        "description": "상담일지/개인메모 intent 기반 단일 라우트",
        "operationId": "postMemo",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": { "type": "string" }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "메모 처리 성공" },
          "400": { "description": "요청 오류" }
        }
      }
    },
    "/order": {
      "post": {
        "summary": "제품 주문 저장",
        "description": "GPT가 OCR로 추출한 주문 정보를 JSON 형태로 전송하여 Google Sheets '제품주문' 시트에 저장합니다.",
        "operationId": "postOrder",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": { "type": "string", "example": "이태수 제품주문 저장" },
                  "orders": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "제품명": { "type": "string", "example": "애터미 징코앤낫토" },
                        "제품가격": { "type": "number", "example": 25800 },
                        "PV": { "type": "number", "example": 9500 },
                        "주문자_고객명": { "type": "string", "example": "이태수" },
                        "주문자_휴대폰번호": { "type": "string", "example": "010-2759-9001" },
                        "배송처": { "type": "string", "example": "[41518] 대구 북구 산격2동 1659번지" }
                      }
                    }
                  }
                },
                "required": ["text", "orders"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "제품 주문 저장 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "2건 저장 완료" },
                    "orders": { "type": "array", "items": { "type": "object" } }
                  }
                }
              }
            }
          },
          "400": { "description": "요청 형식 오류" },
          "500": { "description": "서버 내부 오류" }
        }
      }
    },
    "/commission": {
      "post": {
        "summary": "후원수당 관련 API",
        "description": "intent 기반 단일 라우트",
        "operationId": "postCommission",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": { "type": "string" }
                },
                "required": ["text"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "후원수당 처리 성공" },
          "400": { "description": "요청 오류" }
        }
      }
    },
    "/upload_image": {
      "post": {
        "summary": "이미지 업로드 및 시트 기록",
        "description": "Google Drive에 이미지를 업로드하고, '이미지메모' 시트에 [날짜, 회원명, 이미지링크, 설명]으로 기록합니다.",
        "operationId": "postUploadImage",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "description": "업로드할 이미지 파일"
                  },
                  "description": {
                    "type": "string",
                    "description": "이미지 설명 (예: 둥이들 사진입니다)"
                  }
                },
                "required": ["image"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "✅ 업로드 및 시트 기록 완료" },
          "400": { "description": "요청 오류 (image 필드 누락 등)" },
          "500": { "description": "서버 내부 오류" }
        }
      }
    },
    "/search_image": {
      "get": {
        "summary": "이미지메모 검색",
        "description": "이미지메모 시트에서 회원명 또는 설명(키워드)에 해당하는 이미지 검색",
        "operationId": "getSearchImage",
        "parameters": [
          {
            "in": "query",
            "name": "keyword",
            "schema": { "type": "string" },
            "required": true,
            "description": "검색 키워드 (예: 홍길동, 다이어트)"
          }
        ],
        "responses": {
          "200": { "description": "검색 결과 반환 (JSON)" },
          "400": { "description": "검색어 누락 또는 잘못된 요청" }
        }
      },
      "post": {
        "summary": "이미지메모 검색 (POST)",
        "description": "POST 방식으로 keyword를 포함한 JSON 요청으로 검색 수행",
        "operationId": "postSearchImage",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "keyword": {
                    "type": "string",
                    "description": "검색어 (예: 홍길동, 다이어트)"
                  }
                },
                "required": ["keyword"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "검색 성공 (이미지 목록 반환)" },
          "400": { "description": "요청 오류" },
          "500": { "description": "서버 내부 오류" }
        }
      }
    }
  }
}
