{
  "openapi": "3.1.0",
  "info": {
    "title": "Memberslist API",
    "version": "1.0.0",
    "description": "구글 스프레드시트를 기반으로 한 회원/주문/메모/후원수당 관리 API"
  },
  "servers": [
    { "url": "https://memberslist.onrender.com" }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "홈 (Health Check)",
        "description": "서버 정상 실행 여부 확인",
        "responses": {
          "200": { "description": "Flask 서버 실행 메시지" }
        }
      }
    },
    "/debug_sheets": {
      "get": {
        "summary": "구글 시트 디버깅",
        "description": "현재 연결된 Google Sheets 목록과 특정 시트의 헤더 확인",
        "parameters": [
          {
            "name": "sheet",
            "in": "query",
            "description": "조회할 시트명 (예: DB, 제품주문, 상담일지)",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "시트 목록 및 헤더 반환" },
          "500": { "description": "시트 연결 오류" }
        }
      }
    },
    "/guess_intent": {
      "post": {
        "summary": "자연어 Intent 추출 및 실행",
        "description": "자연어 입력을 intent로 변환하여 실행합니다.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "type": "object", "properties": { "text": { "type": "string" } } },
              "example": { "text": "홍길동 회원 조회" }
            }
          }
        },
        "responses": {
          "200": { "description": "Intent 실행 결과" },
          "400": { "description": "Intent 추출 실패" }
        }
      }
    },
    "/member": {
      "post": {
        "summary": "회원 관련 API",
        "description": "회원 등록, 조회, 수정, 삭제 요청을 intent 기반으로 처리합니다.",
        "requestBody": {
          "content": {
            "application/json": {
              "examples": {
                "회원등록": { "value": { "text": "회원등록 홍길동 12345678 010-1234-5678" } },
                "회원조회": { "value": { "text": "홍길동 회원 조회" } },
                "회원수정": { "value": { "text": "홍길동 주소 서울시 강남구로 수정" } },
                "회원삭제": { "value": { "text": "홍길동 삭제" } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "회원 작업 성공" },
          "400": { "description": "회원 intent 처리 불가" }
        }
      }
    },
    "/memo": {
      "post": {
        "summary": "메모/일지 API",
        "description": "상담일지, 개인메모, 활동일지 저장/검색 intent를 처리합니다.",
        "requestBody": {
          "content": {
            "application/json": {
              "examples": {
                "상담일지 저장": { "value": { "text": "이태수 상담일지 저장 오늘 미팅 진행" } },
                "메모 검색": { "value": { "text": "이태수 상담일지 검색" } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "메모/일지 처리 성공" },
          "400": { "description": "메모 intent 처리 불가" }
        }
      }
    },
    "/order": {
      "post": {
        "summary": "주문 관련 API",
        "description": "제품주문 등록, 조회, 삭제를 intent 기반으로 처리합니다.",
        "requestBody": {
          "content": {
            "application/json": {
              "examples": {
                "제품등록": { "value": { "text": "홍길동 노니 2개 카드 주문" } },
                "주문조회": { "value": { "text": "홍길동 주문 내역" } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "주문 처리 성공" },
          "400": { "description": "주문 intent 처리 불가" }
        }
      }
    },
    "/commission": {
      "post": {
        "summary": "후원수당 API",
        "description": "후원수당 등록, 조회, 수정, 삭제를 intent 기반으로 처리합니다.",
        "requestBody": {
          "content": {
            "application/json": {
              "examples": {
                "후원수당조회": { "value": { "text": "홍길동 후원수당 조회" } },
                "후원수당등록": { "value": { "text": "홍길동 후원수당 2025-08-01 50000원 등록" } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "후원수당 처리 성공" },
          "400": { "description": "후원수당 intent 처리 불가" }
        }
      }
    }
  }
}


